<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mobi.omegacentauri.gotosettings_adb">

    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <!-- required to read the LAN IP address -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- required to read the LAN IP address -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- required to open socket connections -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- required for ADB mDNS detection -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>


    <supports-screens android:xlargeScreens="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"/>
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
    <application
        android:allowBackup="true"
        android:label="ADB Go To Settings"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true">
        <activity android:name=".gotosettings_adb"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".boot" android:enabled="true" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>